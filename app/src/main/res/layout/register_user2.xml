<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ENTER YOUR RESIDENTIAL DETAILS BELOW"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:layout_weight="0.09" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter National Id. Number"
        android:id="@+id/editText10"
        android:text="Enter the street on which you live in"
        android:layout_below="@+id/id_number"
        android:layout_alignEnd="@+id/page1"
        android:layout_alignBottom="@+id/editText"
        android:padding="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your town or city of residence."
        android:layout_toEndOf="@+id/editText10"
        android:padding="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter National Id. Number"
        android:id="@+id/editText"
        android:text="Enter the name of the building that you live in"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/birth1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter National Id. Number"
        android:id="@+id/editText2"
        android:text="Enter your county of residence "
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/page1"
        android:layout_below="@+id/birth1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter National Id. Number"
        android:id="@+id/editText3"
        android:text="Enter your district of residence."
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT PAGE"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09" />

</LinearLayout>