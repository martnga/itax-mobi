<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop = "2dp"
        android:text="Registration/Dormance">
    </TextView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:id="@+id/e-registration_card"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp"
        android:layout_marginTop = "5dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dp"
        android:background="#ffff2b11"
        android:backgroundTint="#ffff2b11">


    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop = "2dp"
        android:text="returns">
    </TextView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:layout_below="@id/e-registration_card"
        android:id="@+id/e-returns_card"
        android:layout_marginTop = "5dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dip"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp"
        android:background="#ffff2b11"
        android:backgroundTint="#ffff2b11">


    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop = "2dp"
        android:text="e-payments">
    </TextView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:layout_below="@id/e-returns_card"
        android:id="@+id/e-payments_card"
        android:layout_marginTop = "5dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dip"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp"
        android:background="#ffff2b11"
        android:backgroundTint="#ffff2b11">


    </android.support.v7.widget.CardView>





</LinearLayout>