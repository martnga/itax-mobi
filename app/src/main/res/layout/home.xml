<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop = "5dp"
        android:text="Registration/Dormance">
    </TextView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:id="@+id/e_registration_card"
        android:clickable="true"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp"
        android:layout_marginTop = "5dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dp"
        card_view:cardBackgroundColor="#f44">



    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop = "5dp"
        android:text="returns">
    </TextView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:layout_below="@id/e_registration_card"
        android:clickable="true"
        android:id="@+id/e_returns_card"
        android:layout_marginTop = "5dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dip"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp"
        android:elevation="20dp"
        card_view:cardBackgroundColor="#f44">


        <RelativeLayout
            android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/kra"/>

        <TextView
            android:id="@+id/info_text"
        android:layout_width="match_parent"
            android:layout_below="@id/image"
        android:layout_height="wrap_content"
        android:text="Your work is going to fill a large part of your life, and the only way to be truly satisfied is to do what you believe is great work. And the only way to do great work is to love what you do. If you haven’t found it yet, keep looking. Don’t settle. As with all matters of the heart, you’ll know when you find it."
        />

    </RelativeLayout>



    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop = "5dp"
        android:text="e-payments">
    </TextView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:layout_below="@id/e_returns_card"
        android:clickable="true"
        android:id="@+id/e_payments_card"
        android:layout_marginTop = "5dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dip"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp"
        android:elevation="20dp"
        card_view:cardBackgroundColor="#f44">


    </android.support.v7.widget.CardView>





</LinearLayout>