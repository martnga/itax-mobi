<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            tools:context=".Home"
            android:background="@color/primary_dark">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/e_registration_card"
        android:clickable="true"
        android:layout_gravity="center"
        android:background="@drawable/button_border"
        card_view:cardCornerRadius="0dp"
        android:elevation="150dp"
        android:layout_marginTop = "65dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dp"
        card_view:cardBackgroundColor="@color/primary_dark">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop = "15dp"
            android:text="@string/eRegistration">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop = "90dp"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text="@string/editRegistrationStatus">
        </TextView>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/e_registration_card"
        android:clickable="true"
        android:id="@+id/e_returns_card"
        android:layout_marginTop = "25dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dip"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp"
        android:elevation="20dp"
        card_view:cardBackgroundColor="@color/primary_dark">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop = "15dp"
            android:text="@string/eReturns">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop = "90dp"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text="@string/consultFileReturns">
        </TextView>


    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"

        android:clickable="true"
        android:id="@+id/e_payments_card"
        android:layout_marginTop = "25dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dip"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp"
        android:elevation="20dp"
        card_view:cardBackgroundColor="@color/primary_dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop = "15dp"
            android:text="@string/ePayments">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop = "90dp"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text="@string/consultCalculatePayments">
        </TextView>


    </android.support.v7.widget.CardView>

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/logout"
        fab:fab_colorNormal="@color/accent"
        fab:fab_colorPressed="@color/app_primary"
        fab:fab_colorRipple="@color/app_primary"/>




</LinearLayout>

</ScrollView>