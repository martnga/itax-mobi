<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark">




<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/payment_registration_card"
        android:clickable="true"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp"
        android:elevation="20dp"
        android:layout_marginTop = "56dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dp"
        card_view:cardBackgroundColor="@color/primary_dark">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/payments_registration_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Registration"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate and register Returns and payments."
                android:layout_marginTop = "35dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/payment_registration_card"
        android:clickable="true"
        android:id="@+id/consult_payments_card"
        android:layout_marginTop = "25dp"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dip"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp"
        android:elevation="20dp"
        card_view:cardBackgroundColor="@color/primary_dark">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/consult_payments_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consult Payments."
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                android:gravity="center"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ask about Tax Payment."
                android:layout_marginTop = "50dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                />

        </LinearLayout>



    </android.support.v7.widget.CardView>




</LinearLayout>

</ScrollView>

